{
    "workbench.sideBar.location": "right",
    "editor.minimap.enabled": false,
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "editor.autoSurround": "never",
    "files.trimTrailingWhitespace": true,
    "editor.guides.indentation": false,
    "editor.occurrencesHighlight": false,

    "editor.mouseWheelZoom": true,

    "extensions.ignoreRecommendations": true,
    "scm.diffDecorations": "none",
    "editor.lightbulb.enabled": false,
    "editor.parameterHints.enabled": false,
    "editor.cursorBlinking": "solid",
    "editor.cursorStyle": "block",
    "editor.quickSuggestionsDelay": 5000,
    "editor.scrollbar.horizontal": "visible",
    "editor.scrollbar.vertical": "visible",
    "editor.suggestOnTriggerCharacters": false,
    "editor.scrollbar.verticalScrollbarSize": 30,
    "editor.scrollbar.horizontalScrollbarSize": 30,

    "editor.acceptSuggestionOnCommitCharacter": false,    // maybe need true
    "workbench.colorTheme": "Abyss",
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "editor.matchBrackets": "near",
    "window.title": "${dirty}${activeEditorLong}",
    "editor.autoIndent": "none",
    "search.useGlobalIgnoreFiles": true,
    "editor.renderWhitespace": "none",
    "editor.autoClosingDelete": "never",
    "git.ignoreWindowsGit27Warning": true,
    "calva.showCalvaSaysOnStart": false,
    "calva.paredit.defaultKeyMap": "none",
    "calva.paredit.hijackVSCodeDefaults": false,
    "[clojure]": {
        "editor.wordSeparators": "\t ()\"':,;~@#$%^&{}/[].`",
        "editor.autoClosingBrackets": "never",
        "editor.autoClosingQuotes": "never",
        "editor.formatOnType": false,
        "editor.autoIndent": "none",
        "editor.formatOnPaste": false,
        "editor.matchBrackets": "never",
        "editor.autoClosingOvertype": "never",
    },

//    "editor.fontFamily": "'JetBrains Mono Medium', 'Courier New', monospace",

    "outline.showModules": false,
    "outline.showFunctions": false,
    "outline.showInterfaces": false,
    "outline.icons": false,
    "outline.problems.badges": false,
    "outline.problems.enabled": false,
    "outline.showArrays": false,
    "editor.folding": false,
    "editor.foldingHighlight": false,
    "outline.showBooleans": false,
    "outline.showConstants": false,
    "outline.showClasses": false,
    // many other shows are skipped ....

    "editor.rulers": [],
    "workbench.tree.renderIndentGuides": "none",

    "files.autoSave": "afterDelay",
    "editor.lineNumbers": "off",

    // "git.confirmSync": false,
    // "editor.fontSize": 15,
    // "editor.codeLens": false,
    // "workbench.tips.enabled": false,
    // "files.trimFinalNewlines": true,
    // "window.zoomLevel": 2
}